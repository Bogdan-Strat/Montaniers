@using Montaniarzii.BusinessLogic.Implementation.TripsXAttractions.Models
@using Montaniarzii.Entities.Enums
@model TripInformationModel
@{
    ViewData["Title"] = "GetTripInformationForEdit";
}
@{
    var postTypes = Enum.GetValues(typeof(PostTypes))
          .Cast<PostTypes>()
          .Select(element => new SelectListItem()
                  {
                      Value = ((byte)element).ToString(),
                      Text = element.ToString()
                  });

    var privacyTypes = Enum.GetValues(typeof(PublicityTypes))
          .Cast<PublicityTypes>()
          .Select(element => new SelectListItem()
                  {
                      Value = ((byte)element).ToString(),
                      Text = element.ToString()
                  });

    var ratingTypes = Enumerable.Range(1, 5)
          .Select(element => new SelectListItem()
                  {
                      Value = ((byte)element).ToString(),
                      Text = element.ToString()
                  });

    var difficultyTypes = Enumerable.Range(1, 10)
          .Select(element => new SelectListItem()
                  {
                      Value = ((byte)element).ToString(),
                      Text = element.ToString()
                  });

    var markingTypes = Enum.GetValues(typeof(PublicityTypes))
          .Cast<PublicityTypes>()
          .Select(element => new SelectListItem()
                  {
                      Value = ((byte)element).ToString(),
                      Text = element.ToString()
                  });

    var attractionTypes = Enum.GetValues(typeof(AttractionTypes))
          .Cast<AttractionTypes>()
          .Select(element => new SelectListItem()
                  {
                      Value = ((byte)element).ToString(),
                      Text = element.ToString()
                  });
}
<h1>CreateTrip</h1>

<h4>CreateTripModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        You didn't find your attraction among us? Send it to us and we take care that next time you will see it.
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="mdo">Suggest Attraction</button>
        @*<form enctype="multipart/form-data">*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" id="Description">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" value="@Model.Description" class="form-control" id="description" />
            <span asp-validation-for="Description" class="text-danger create-error"></span>
        </div>
        <div class="form-group" id="TripDate">
            <label asp-for="Date" class="control-label">Date</label>
            <input asp-for="Date" value="@Model.Date" class="form-control" id="date" />
            <span asp-validation-for="Date" class="text-danger create-error"></span>
        </div>
        <div class="form-group" id="RatingId">
            <label asp-for="Rating" class="control-label">Rating</label>
            <select class="form-select" value="@Model.Rating" aria-label="Default select example" class="form-control" id="rating" asp-items="@ratingTypes"></select>
        </div>
        <div class="form-group" id="DifficultyId">
            <label asp-for="Difficulty" class="control-label">Difficulty</label>
            <select class="form-select" aria-label="Default select example" class="form-control" id="difficulty" asp-items="@difficultyTypes"></select>
        </div>
        <div class="form-group" id="Equipment">
            <label asp-for="Equipment" class="control-label"></label>
            <input asp-for="Equipment" value="@Model.Equipment" class="form-control" id="equipment" />
            <span asp-validation-for="Equipment" class="text-danger create-error"></span>
        </div>
        <div class="form-group" id="TypePostId">
            <label asp-for="TypePost" class="control-label">Type Post</label>
            <select class="form-select" aria-label="Default select example" class="form-control" id="typepost" asp-items="@postTypes">
                @*@foreach(var option in Model.TypePost)
                {
                <option value="@option">@option.ToString()</option>
                }*@
            </select>
        </div>
        <div class="form-group" id="PrivacyId">
            <label asp-for="Privacy" class="control-label">Privacy</label>
            <select class="form-select" aria-label="Default select example" class="form-control" id="privacy" asp-items="@privacyTypes"></select>
        </div>
        <div id="invitations"></div>
        <div class="form-group" id="Photos">
            <label @*asp-for="Photos"*@ class="control-label">Photos</label>
            <input @*asp-for="Photos"*@ class="form-control" id="photos" type="file" multiple />
            <span @*asp-validation-for="Photos"*@ class="text-danger create-error"></span>
            <div id="photo-list">
            </div>
        </div>
        <div class="form-group" id="Attractions[0].AttractionId" data-id="00000000-0000-0000-0000-000000000000">
            <label class="control-label">Start Point</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <select class="form-select" aria-label="Default select example" class="form-control" asp-items="@attractionTypes"></select>
                </div>
                 <input class="form-control" id="Attractions[0]" data-id="00000000-0000-0000-0000-000000000000" value="" />
            </div>
           
            <span class="text-danger create-error"></span>
            <div id="suggestions"></div>
        </div>
        <div id="dynamic-sections">
            <div id="sections">
            </div>
            <div id="addbutton"></div>

        </div>
        <div class="form-group">
            <input type="button" value="Create" class="btn btn-primary" id="post-button" />
        </div>
        @*</form>*@
    </div>
</div>