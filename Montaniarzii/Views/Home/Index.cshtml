@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <img src="/PozeAplicatie/man.jpg" class="welcome-image" />
    <div class="buttons-welcome-message">
        <div class="d-flex flex-column gap-3">
            <div>
                <h1 class="display-4 text-light fs-1 fw-normal">Montaniers</h1>
                <p class="text-light text-center" style="width:400px;">Go beyond your limit! Create memories by connecting with people who are passionate about hiking.</p>
            </div>
            <div class="d-flex flex-row justify-content-center gap-3">
                <a class="btn btn-light rounded-pill px-3 " asp-controller="UserAccount" asp-action="Login">Log in</a>
                <a class="btn btn-light rounded-pill px-3" asp-controller="UserAccount" asp-action="Register">Register</a>
            </div>

        </div>

    </div>

</div>



@section Styles {
    <link href="@Url.Content("~/css/Home/index.css")" rel="stylesheet" type="text/css" />
}
