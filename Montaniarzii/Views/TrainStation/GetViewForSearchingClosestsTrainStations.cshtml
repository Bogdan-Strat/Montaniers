@{
    ViewData["Title"] = "GetViewForSearchingClosestsTrainStations";
}

<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark" style="position:relative; background-image: url('/PozeAplicatie/train-stations.jpg'); width:100%; height:400px; background-size:cover; background-position:center;">
    @*    <img src="/PozeAplicatie/train-stations.jpg" style="position:cover;"/>
    *@
    <div class="col-md-6 px-0" style="position:absolute;">
        <h1 class="display-6 "> Enter an attraction and search closest Train Stations</h1>
    </div>
</div>

<div class="d-flex justify-content-center">
    <div style="position:relative; padding:5px;">
        <input type="text" class="form-control rounded-pill" style="width:400px;" id="search-attraction" data-attractionid="00000000-0000-0000-0000-000000000000" placeholder="Enter an attraction" />
        <div id="suggestion-list" style="position: absolute;
    width: 100%;
    max-height: 300px;
    overflow: auto;
    top: 100%;
    left: 0;
    background: #fff;
    box-shadow: 0 0.25rem 0.75rem rgb(0 0 0 / 15%);
    border: 1px solid #dee2e6;">
        </div>

    </div>
    <button type="button" class="btn btn-primary rounded-pill" id="search-train-stations">Search</button>
</div>
<div id="train-stations" style="margin-top:20px;">
</div>

<div id="map" style="width:800px; height:600px;">

</div>
<div id="load-more">
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");


    }
    <script>
        window.count = 0;
    </script>
    <script type="text/javascript" src="~/js/TrainStation/GetViewForSearchingTheClosestTrainStation.js">
    </script>


}

