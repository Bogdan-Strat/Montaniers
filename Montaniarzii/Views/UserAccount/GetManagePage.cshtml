@{
    ViewData["Title"] = "GetManagePage";
}

<ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="follow-requests-button" data-bs-toggle="tab" data-bs-target="#follow-requests-zone" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Follow Requests</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pending-invitations-button" data-bs-toggle="tab" data-bs-target="#pending-invitations-zone" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Pending Invitations</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pending-suggestions-button" data-bs-toggle="tab" data-bs-target="#pending-suggestions-zone" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Pending Suggestions</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="follow-requests-zone" role="tabpanel" aria-labelledby="home-tab" tabindex="0"></div>
  <div class="tab-pane fade" id="pending-invitations-zone" role="tabpanel" aria-labelledby="profile-tab" tabindex="0"></div>
  <div class="tab-pane fade" id="pending-suggestions-zone" role="tabpanel" aria-labelledby="contact-tab" tabindex="0"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");


    }
    <script type="module" src="~/js/UserAccount/GetManagePage.js">
    </script>


}